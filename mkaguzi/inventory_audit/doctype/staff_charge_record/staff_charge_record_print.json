{
  "doctype": "Print Format",
  "name": "Staff Charge Record Print",
  "doc_type": "Staff Charge Record",
  "module": "Inventory Audit",
  "standard": "Yes",
  "custom_format": 0,
  "print_format_type": "Jinja",
  "raw_printing": 0,
  "html": "{% set doc = frappe.get_doc('Staff Charge Record', doc.name) %}\n<style>\n  .charge-header { text-align: center; margin-bottom: 20px; }\n  .charge-title { font-size: 24px; font-weight: bold; }\n  .charge-subtitle { font-size: 14px; color: #666; }\n  .section-title { font-weight: bold; background: #f5f5f5; padding: 8px; margin-top: 15px; }\n  .detail-row { display: flex; padding: 5px 0; border-bottom: 1px solid #eee; }\n  .detail-label { flex: 1; font-weight: 500; }\n  .detail-value { flex: 2; }\n  .amount-box { background: #fff3cd; padding: 15px; margin: 20px 0; text-align: center; }\n  .amount-value { font-size: 28px; font-weight: bold; color: #856404; }\n  .signature-section { display: flex; margin-top: 40px; }\n  .signature-box { flex: 1; text-align: center; }\n  .signature-line { border-top: 1px solid #333; margin-top: 60px; padding-top: 5px; }\n</style>\n\n<div class=\"charge-header\">\n  <div class=\"charge-title\">STAFF CHARGE RECORD</div>\n  <div class=\"charge-subtitle\">{{ doc.name }}</div>\n</div>\n\n<div class=\"section-title\">Employee Details</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Employee</div>\n  <div class=\"detail-value\">{{ doc.employee_name or doc.employee }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Department</div>\n  <div class=\"detail-value\">{{ doc.department or '-' }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Designation</div>\n  <div class=\"detail-value\">{{ doc.designation or '-' }}</div>\n</div>\n\n<div class=\"section-title\">Item Details</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Item Code</div>\n  <div class=\"detail-value\">{{ doc.item_code }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Description</div>\n  <div class=\"detail-value\">{{ doc.item_description or '-' }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Quantity</div>\n  <div class=\"detail-value\">{{ doc.quantity }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Unit Value</div>\n  <div class=\"detail-value\">{{ frappe.format_value(doc.unit_value, {'fieldtype': 'Currency'}) }}</div>\n</div>\n\n<div class=\"amount-box\">\n  <div>Total Charge Amount</div>\n  <div class=\"amount-value\">{{ frappe.format_value(doc.charge_amount, {'fieldtype': 'Currency'}) }}</div>\n</div>\n\n<div class=\"section-title\">Charge Reason</div>\n<div style=\"padding: 10px;\">{{ doc.charge_reason or '-' }}</div>\n\n<div class=\"section-title\">Source Audit</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Audit Reference</div>\n  <div class=\"detail-value\">{{ doc.source_audit or '-' }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Warehouse</div>\n  <div class=\"detail-value\">{{ doc.warehouse or '-' }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Audit Date</div>\n  <div class=\"detail-value\">{{ frappe.format_value(doc.audit_date, {'fieldtype': 'Date'}) }}</div>\n</div>\n\n<div class=\"section-title\">Deduction Details</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Deduction Month</div>\n  <div class=\"detail-value\">{{ doc.deduction_month or '-' }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Payroll Reference</div>\n  <div class=\"detail-value\">{{ doc.payroll_reference or '-' }}</div>\n</div>\n<div class=\"detail-row\">\n  <div class=\"detail-label\">Status</div>\n  <div class=\"detail-value\">{{ doc.status }}</div>\n</div>\n\n<div class=\"signature-section\">\n  <div class=\"signature-box\">\n    <div class=\"signature-line\">Employee Signature</div>\n    {% if doc.employee_acknowledgement %}\n    <small>Acknowledged: {{ frappe.format_value(doc.acknowledgement_date, {'fieldtype': 'Datetime'}) }}</small>\n    {% endif %}\n  </div>\n  <div class=\"signature-box\">\n    <div class=\"signature-line\">Store Manager</div>\n    {% if doc.recommended_by %}\n    <small>{{ doc.recommended_by }}<br>{{ frappe.format_value(doc.recommended_date, {'fieldtype': 'Datetime'}) }}</small>\n    {% endif %}\n  </div>\n  <div class=\"signature-box\">\n    <div class=\"signature-line\">HOD Approval</div>\n    {% if doc.approved_by %}\n    <small>{{ doc.approved_by }}<br>{{ frappe.format_value(doc.approval_date, {'fieldtype': 'Datetime'}) }}</small>\n    {% endif %}\n  </div>\n</div>"
}
